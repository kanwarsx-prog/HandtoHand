{
  "name": "handtohand-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "web",
    "mobile",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "cd web && npm run dev",
    "dev:mobile": "cd mobile && npm start",
    "build:web": "cd web && npm run build",
    "build:mobile": "cd mobile && npm run build",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "test": "npm run test --workspaces",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "supabase status",
    "db:push": "cd packages/database && npm run db:push",
    "db:generate": "cd packages/database && npm run db:generate",
    "db:studio": "cd packages/database && npm run db:studio"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "description": "A money-free local exchange platform built with Supabase and Vercel.",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
